<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="13dp">
        <ImageView
            android:id="@+id/idAddToFavAdvancedSearchImageView"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            android:background="@color/shimmer_color" />

        <TextView
            android:id="@+id/idItemNameTextViewH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/shimmer_color"
            android:textDirection="rtl"
            android:textSize="13sp"
            android:textStyle="bold" />

        <!-- Text VIew to display Course Rating -->
        <!-- Image used in present in drawable folder -->
        <TextView
            android:id="@+id/idItemNoTextViewH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idItemNameTextViewH"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="2dp"
            android:background="@color/shimmer_color"
            android:textDirection="rtl" />
        <TextView
            android:id="@+id/idStoreTotalQuantityTextViewH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idItemNoTextViewH"
            android:background="@color/shimmer_color"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="2dp"
            android:textDirection="rtl" />

    </RelativeLayout>


</RelativeLayout>