<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="10dp"
app:cardBackgroundColor="@color/colorPrimaryDark"
app:cardCornerRadius="13dp"
app:cardElevation="8dp"
app:cardMaxElevation="10dp"
app:cardPreventCornerOverlap="true"
>



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >


    <TextView
        android:id="@+id/idItemNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/query_element"
        android:textDirection="rtl"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Text VIew to display Course Rating -->
    <!-- Image used in present in drawable folder -->
    <TextView
        android:id="@+id/idStoreNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idItemNameTextView"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="2dp"
        android:text="@string/search_for_element"
        android:textDirection="rtl"
        android:textColor="@android:color/white"
         />
    <TextView
        android:id="@+id/idStoreTotalQuantityTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idStoreNameTextView"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="2dp"
        android:text="@string/search_for_element"
        android:textDirection="rtl"
        android:textColor="@android:color/white"
        />
    <TextView
        android:id="@+id/idStoreLastDateSendTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idStoreTotalQuantityTextView"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="2dp"
        android:text="@string/search_for_element"
        android:textDirection="rtl"
        android:textColor="@android:color/white"
        />
</RelativeLayout>
</androidx.cardview.widget.CardView>
