<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    tools:context=".views.ForgetUserPasswordScreen">

    <include
        layout="@layout/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/requestImg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="20dp"
        android:layout_weight="0"
        android:src="@drawable/forget_password" />

    <EditText
        android:id="@+id/forgetEmpIdEditText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/rounded_corner_white_color"
        android:hint="@string/enter_employee_number"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="5"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorAccent"
        android:textSize="13sp"
        tools:ignore="RtlCompat,TextFields" />
    <EditText
        android:id="@+id/forgetMobileEditText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/rounded_corner_white_color"
        android:hint="@string/enter_employee_phone_number"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="11"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorAccent"
        android:textSize="13sp"
        tools:ignore="RtlCompat,TextFields" />
    <EditText
        android:id="@+id/forgetUserNameEditText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/rounded_corner_white_color"
        android:hint="@string/enter_your_name"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorAccent"
        android:textSize="13sp"
        tools:ignore="RtlCompat,TextFields" />
    <EditText
        android:id="@+id/forgetPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/rounded_corner_white_color"
        android:hint="@string/enter_your_password"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorAccent"
        android:textSize="13sp"
        tools:ignore="RtlCompat,TextFields" />

    <Button
        android:id="@+id/forgetPasswordButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="5dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginHorizontal="35dp"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner_primary_color"
        android:text="@string/change_password_button"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        tools:ignore="RtlCompat" />


</LinearLayout>