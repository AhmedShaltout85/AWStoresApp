<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardCornerRadius="13dp"
    app:cardElevation="8dp"
    app:cardPreventCornerOverlap="true"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <!-- ImageVIew to display our Course Image -->

        <!-- Text View to display Course Name -->
        <ImageView
            android:id="@+id/idRemoveFavImageView"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            android:src="@drawable/ic_delete" />
        <TextView
            android:id="@+id/idItemNumberFavTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/idRemoveFavImageView"
            android:drawablePadding="2dp"
            android:text="@string/search_for_element"
            android:textDirection="rtl"
            android:textColor="@android:color/white" />
        <TextView
            android:id="@+id/idItemNameFavTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/idItemNumberFavTextView"
            android:layout_toEndOf="@id/idRemoveFavImageView"
            android:text="@string/query_element"
            android:textDirection="rtl"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Text VIew to display Course Rating -->
        <!-- Image used in present in drawable folder -->


        <TextView
            android:id="@+id/idStoresTotalQuantityFavTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idItemNameFavTextView"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/idRemoveFavImageView"
            android:drawablePadding="2dp"
            android:text="@string/search_for_element"
            android:textDirection="rtl"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
